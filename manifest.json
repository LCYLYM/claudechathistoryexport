{
  "manifest_version": 3,
  "name": "Claude对话管理中心",
  "version": "2.0.0",
  "description": "Claude对话导出、可视化和管理的完整解决方案",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Claude对话管理中心"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "viewer.html",
        "manager.html",
        "assets/*",
        "*.js",
        "*.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "assets/icon-16.svg",
    "32": "assets/icon-32.svg",
    "48": "assets/icon-48.svg",
    "128": "assets/icon-128.svg"
  }
}
